@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "BlogReadAll";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">


<body>
    <section class="banner-bottom">
        <!--/blog-->
        <div class="container">
            <div class="row">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    @foreach (var item in Model)
                    {
                        <div class="blog-grid-top">
                            <div class="b-grid-top">
                                <div class="blog_info_left_grid">
                                    <a href="single.html">
                                        <img src="@item.BlogImage" class="img-fluid" alt="">
                                    </a>
                                </div>
                                <div class="blog-info-middle">
                                    <ul>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i> @(((DateTime)item.BlogCreationDate).ToString("dd-MMM-yyyy"))
                                            </a>
                                        </li>
                                        <li class="mx-2">
                                            <a href="#">
                                                <i class="far fa-thumbs-up"></i> 0 Likes
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-comment"></i> 0 Comments
                                            </a>
                                        </li>

                                    </ul>
                                </div>
                            </div>

                            <h3>
                                <a href="#">@item.BlogTitle</a>
                            </h3>

                            <p>@item.BlogContent</p>

                        </div>
                    }

                    @*<h1>@ViewBag.Id</h1>*@
                    <!--/commentlist--><!--/commentlist--><!--/commentlist--><!--/commentlist-->
                    @*@await Component.InvokeAsync("/Views/Shared/Components/CommentList/Default.cshtml")*@
                    @await Component.InvokeAsync("ListCommentsByBlog", new { id = ViewBag.Id })
                    
                    @*@await Html.PartialAsync("~/Views/Comment/PartialCommentList.cshtml")*@
                    <!--/commentlist--><!--/commentlist--><!--/commentlist--><!--/commentlist-->
                    <!--/AddComment--><!--/AddComment--><!--/AddComment--><!--/AddComment-->
                    @await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml")
                    <!--/AddComment--><!--/AddComment--><!--/AddComment--><!--/AddComment-->

                </div>

                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        <div class="tech-btm">
                            <img src="~/webtema/images/banner1.jpg" class="img-fluid" alt="">
                        </div>

                        <h4>Signup to our newsletter</h4>
                        <!--/SubscribeMail--><!--/SubscribeMail--><!--/SubscribeMail--><!--/SubscribeMail-->
                        @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")
                        <!--/SubscribeMail--><!--/SubscribeMail--><!--/SubscribeMail--><!--/SubscribeMail-->

                        <!--/ListCategories--><!--/ListCategories--><!--/ListCategories--><!--/ListCategories-->
                        @await Component.InvokeAsync("ListCategories")
                        <!--/ListCategories--><!--/ListCategories--><!--/ListCategories--><!--/ListCategories-->

                        <!--/AuthorsLastBlog--><!--/AuthorsLastBlog--><!--/AuthorsLastBlog--><!--/AuthorsLastBlog-->
                        @await Component.InvokeAsync("AuthorsLastBlog")
                        <!--/AuthorsLastBlog--><!--/AuthorsLastBlog--><!--/AuthorsLastBlog--><!--/AuthorsLastBlog-->


                        <div class="single-gd my-5 tech-btm">
                            <h4>Our Progress</h4>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0"
                                     aria-valuemax="100"></div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0"
                                     aria-valuemax="100"></div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0"
                                     aria-valuemax="100"></div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0"
                                     aria-valuemax="100"></div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0"
                                     aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="single-gd tech-btm">
                            <h4>Recent Post</h4>
                            <div class="blog-grids">
                                <div class="blog-grid-left">
                                    <a href="single.html">
                                        <img src="~/webtema/images/b1.jpg" class="img-fluid" alt="">
                                    </a>
                                </div>
                                <div class="blog-grid-right">

                                    <h5>
                                        <a href="single.html">Pellentesque dui, non felis. Maecenas male</a>
                                    </h5>
                                </div>
                                <div class="clearfix"> </div>
                            </div>
                        </div>
                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>
    <!--//main--><!--//main--><!--//main--><!--//main--><!--//main-->

</body>

</html>